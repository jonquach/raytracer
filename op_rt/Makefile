OBJ=	$(SRC:.c=.o)

INC=	./inc/

LIB=	./lib/

MLX=	/usr/X11/lib

CC=	gcc -lpthread -pthread

RM=	rm -f

all:		$(NAME)

%.o:		%.c
		$(CC) -c $^ -o $@ $(CFLAGS)

$(NAME):	$(OBJ)
		make -C $(LIB)
		$(CC) -o $(NAME) $(OBJ) -L/usr/local/lib -ljpeg -L$(MLX) libmlx_x86_64.a -lXext -lX11 -L$(LIB) -lmy -lm $(CFLAGS)
clean:
		make clean -C $(LIB)
		$(RM) $(OBJ)

fclean:		clean
		make fclean -C $(LIB)
		$(RM) $(NAME)

re:		fclean all
